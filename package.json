{
  "name": "electron-image-editor",
  "version": "1.0.0",
  "description": "Modern Offline Image Editor built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"webpack --config webpack.config.js --watch\" \"electron .\"",
    "build": "webpack --config webpack.config.js --mode production",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.yourdomain.image-editor",
    "productName": "Electron Image Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "keywords": [
    "electron",
    "image",
    "editor",
    "offline"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.3",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.3",
    "webpack": "^5.99.5",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.1",
    "@heroicons/react": "^2.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.1",
    "fabric": "^6.6.2",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.6.3",
    "jimp": "^1.6.0",
    "konva": "^9.3.20",
    "pdf-lib": "^1.17.1",
    "pica": "^9.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-konva": "^19.0.3",
    "sharp": "^0.34.1",
    "uuid": "^11.1.0"
  }
}
